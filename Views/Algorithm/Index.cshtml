
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/indexAlgorithm.css" rel="stylesheet" />

<h2 class="text-center text-light mb-4">Hãy chọn cách tìm đường đi của bạn</h2>

<div class="container-fluid">
