<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- Header Section -->
    <header class="bg-warning">
        <div class="container header-content border-bottom bg-warning">
            <div class="logo"><a href="@Url.Action("Index","Home")">Logo Website</a></div>
            <nav aria-label="Chính">
                <ul class="nav-list">
                    <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                    <li><a href="@Url.Action("MoPhong","Home")">Mô phỏng</a></li>
                    <li><a href="@Url.Action("UngDung","Home")">Ứng dụng</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Liên hệ</a></li>
                   
                </ul>
            </nav>
        </div>
    </header>


    <div class="container container-fluid">
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p>Địa chỉ: 123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</p>
                    <p>Điện thoại: (0123) 456-789</p>
                    <p>Email: contact@example.com</p>
                </div>
                <div class="footer-section">
                    <h3>Liên Kết Nhanh</h3>
                    <a href="#">Trang Chủ</a>
                    <a href="#">Giới Thiệu</a>
                    <a href="#">Dịch Vụ</a>
                    <a href="#">Sản Phẩm</a>
                </div>
                <div class="footer-section">
                    <h3>Theo Dõi Chúng Tôi</h3>
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">LinkedIn</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2023 Tên Công Ty. Tất cả các quyền được bảo lưu. | Phát triển bởi Nhóm Phát Triển</p>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/js/script.js"></script>
</body>

</html>
